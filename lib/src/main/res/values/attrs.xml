<resources>
    <declare-styleable name="PollView">

        <attr name="pollCardHeight" format="dimension" />
        <attr name="pollOptionsHeight" format="dimension" />
        <attr name="pollOptionsCornerRadius" format="dimension" />

        <attr name="pollBackgroundColor" format="color" />
        <attr name="optionOneBackgroundColor" format="color" />
        <attr name="optionTwoBackgroundColor" format="color" />

        <attr name="questionText" format="string" localization="suggested" />
        <attr name="questionTextColor" format="color" />
        <attr name="questionTextSize" format="dimension" />

        <attr name="optionOneText" format="string" localization="suggested" />
        <attr name="optionOneStartColor" format="color" />
        <attr name="optionOneEndColor" format="color" />
        <attr name="optionOneTextSize" format="dimension" />


        <attr name="optionTwoText" format="string" localization="suggested" />
        <attr name="optionTwoStartColor" format="color" />
        <attr name="optionTwoEndColor" format="color" />
        <attr name="optionTwoTextSize" format="dimension" />

        <attr name="pollDividerColor" format="color" />

        <attr name="optionOnePercentage" format="float" />
        <attr name="optionTwoPercentage" format="float" />

        <attr name="defaultOptionOneFromValue" format="float" />
        <attr name="defaultOptionTwoFromValue" format="float" />

        <attr name="pollAnimationDuration" format="integer" />

        <attr name="minThresholdValue" format="float" />
        <attr name="maxThresholdValue" format="float" />


    </declare-styleable>

    <declare-styleable name="GradientTextView">

        <attr name="gradientStartColor" format="color" />
        <attr name="gradientEndColor" format="color" />

    </declare-styleable>


</resources>
